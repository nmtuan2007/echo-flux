# EchoFlux Environment Configuration
# Copy this file to .env and adjust values as needed.

# Engine
ECHOFLUX_HOST=127.0.0.1
ECHOFLUX_PORT=8765

# Audio
ECHOFLUX_AUDIO_SOURCE=microphone
ECHOFLUX_SAMPLE_RATE=16000
ECHOFLUX_CHUNK_MS=20

# ASR
ECHOFLUX_ASR_BACKEND=faster_whisper
ECHOFLUX_MODEL_SIZE=small
ECHOFLUX_LANGUAGE=en
ECHOFLUX_COMPUTE_TYPE=float16
ECHOFLUX_DEVICE=auto

# Translation
ECHOFLUX_TRANSLATION_ENABLED=false
ECHOFLUX_TRANSLATION_BACKEND=marian
ECHOFLUX_SOURCE_LANG=en
ECHOFLUX_TARGET_LANG=vi

# VAD
ECHOFLUX_VAD_ENABLED=true
ECHOFLUX_VAD_THRESHOLD=0.5

# Logging
ECHOFLUX_LOG_LEVEL=INFO

# Model directory (optional, overrides default platform path)
# ECHOFLUX_MODELS_DIR=

# Config file path (optional)
# ECHOFLUX_CONFIG_PATH=
