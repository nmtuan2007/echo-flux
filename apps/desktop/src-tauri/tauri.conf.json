{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "EchoFlux",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": false,
        "sidecar": false
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setAlwaysOnTop": true,
        "setSize": true,
        "setPosition": true,
        "setDecorations": true,
        "setSkipTaskbar": true
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": false
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "exists": true,
        "scope": ["$APPDATA/*", "$HOME/.echoflux/*"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": false,
        "save": true,
        "open": false
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.echoflux.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "category": "Utility",
      "shortDescription": "Real-time speech-to-text and translation",
      "longDescription": "EchoFlux is a fully local, low-latency, real-time speech-to-text and translation desktop application."
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ws://127.0.0.1:* ws://localhost:*; style-src 'self' 'unsafe-inline'"
    },
    "windows": [
      {
        "title": "EchoFlux",
        "width": 800,
        "height": 600,
        "minWidth": 480,
        "minHeight": 360,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true
      }
    ]
  }
}
