{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Engine: Start",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": ["-m", "engine.main"],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {}
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Lint: Ruff Check",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/ruff",
      "args": ["check", "."],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Lint: Ruff Format",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/ruff",
      "args": ["format", "."],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Test: Pytest",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/pytest",
      "args": ["-v"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Desktop: Dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "tauri", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/apps/desktop"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Desktop: Install Deps",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/apps/desktop"
      },
      "problemMatcher": []
    }
  ]
}
